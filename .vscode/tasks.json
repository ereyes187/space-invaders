{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-g",
        "-std=c++17",
        "-I${workspaceFolder}/include",
        "-L${workspaceFolder}/lib",
        "${workspaceFolder}/src/global.h",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/player.cpp",
        "${workspaceFolder}/src/bullet.cpp",
        "-lfreeglut.dll",
        "-lopengl32",
        "-lglu32",
        "-lgdi32",
        "-o",
        "${workspaceFolder}/space-invaders.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:/MinGW/bin/g++.exe"
    }
  ]
}
